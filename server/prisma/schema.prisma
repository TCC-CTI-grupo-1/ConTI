generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model profile {
  id                      Int            @id @default(autoincrement())
  name                    String         @db.VarChar(255)
  email                   String         @unique @db.VarChar(255)
  password                String         @db.VarChar(255)
  profile_picture         String?        @db.VarChar(255)
  creation_date           DateTime       @default(now()) @db.Timestamp(6)
  total_correct_answers   Int            @default(0)
  total_incorrect_answers Int            @default(0)
  total_mock_tests        Int            @default(0)
  area_profile            area_profile[]
  mockTest                mockTest[]
}

model answer {
  id                Int                 @id @default(autoincrement())
  question_id       Int
  answer            String
  is_correct        Boolean
  question          question            @relation(fields: [question_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  question_mockTest question_mockTest[]
}

model area {
  id           Int            @id @default(autoincrement())
  name         String         @db.VarChar(255)
  parent_id    Int?
  area         area?          @relation("areaToarea", fields: [parent_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  other_area   area[]         @relation("areaToarea")
  area_profile area_profile[]
}

model area_profile {
  area_id               Int
  profile_id            Int
  total_correct_answers Int     @default(0)
  total_answers         Int     @default(0)
  area                  area    @relation(fields: [area_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  profile               profile @relation(fields: [profile_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@id([area_id, profile_id])
}

model cache {
  key        String @id @db.VarChar(255)
  value      String
  expiration Int
}

model cache_locks {
  key        String @id @db.VarChar(255)
  owner      String @db.VarChar(255)
  expiration Int
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model cursos {
  id         BigInt    @id @default(autoincrement())
  titulo     String    @db.VarChar(255)
  descricao  String    @db.VarChar(255)
  imagem     String    @db.VarChar(255)
  valor      Decimal   @db.Decimal(5, 2)
  publicado  String    @default("n√£o") @db.VarChar(255)
  created_at DateTime? @db.Timestamp(0)
  updated_at DateTime? @db.Timestamp(0)
}

model failed_jobs {
  id         BigInt   @id @default(autoincrement())
  uuid       String   @unique(map: "failed_jobs_uuid_unique") @db.VarChar(255)
  connection String
  queue      String
  payload    String
  exception  String
  failed_at  DateTime @default(now()) @db.Timestamp(0)
}

model job_batches {
  id             String  @id @db.VarChar(255)
  name           String  @db.VarChar(255)
  total_jobs     Int
  pending_jobs   Int
  failed_jobs    Int
  failed_job_ids String
  options        String?
  cancelled_at   Int?
  created_at     Int
  finished_at    Int?
}

model jobs {
  id           BigInt @id @default(autoincrement())
  queue        String @db.VarChar(255)
  payload      String
  attempts     Int    @db.SmallInt
  reserved_at  Int?
  available_at Int
  created_at   Int

  @@index([queue], map: "jobs_queue_index")
}

model migrations {
  id        Int    @id @default(autoincrement())
  migration String @db.VarChar(255)
  batch     Int
}

model password_reset_tokens {
  email      String    @id @db.VarChar(255)
  token      String    @db.VarChar(255)
  created_at DateTime? @db.Timestamp(0)
}

model question {
  id                  Int                 @id @default(autoincrement())
  question_text       String
  year                Int
  total_answers       Int                 @default(0)
  total_answers_right Int                 @default(0)
  difficulty          difficulty
  image               String?             @db.VarChar(255)
  additional_info     String?
  area_id             Int
  answer              answer[]
  question_mockTest   question_mockTest[]
}

model sessions {
  id            String  @id @db.VarChar(255)
  user_id       BigInt?
  ip_address    String? @db.VarChar(45)
  user_agent    String?
  payload       String
  last_activity Int

  @@index([last_activity], map: "sessions_last_activity_index")
  @@index([user_id], map: "sessions_user_id_index")
}

model users {
  id                BigInt    @id @default(autoincrement())
  name              String    @db.VarChar(255)
  email             String    @unique(map: "users_email_unique") @db.VarChar(255)
  email_verified_at DateTime? @db.Timestamp(0)
  password          String    @db.VarChar(255)
  remember_token    String?   @db.VarChar(100)
  created_at        DateTime? @db.Timestamp(0)
  updated_at        DateTime? @db.Timestamp(0)
}

model mockTest {
  id                    Int                 @id(map: "mock_test_pkey") @default(autoincrement())
  profile_id            Int
  title                 String              @db.VarChar(255)
  total_wrong_answers   Int                 @default(0)
  total_correct_answers Int                 @default(0)
  time_limit            Int
  time_spent            Int                 @default(0)
  creation_date         DateTime            @default(now()) @db.Timestamp(6)
  test_type             mocktesttype
  UUID                  String              @default(uuid()) @db.VarChar(255) @unique
  profile               profile             @relation(fields: [profile_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "mock_test_profile_id_fkey")
  question_mockTest     question_mockTest[]
}

model question_mockTest {
  question_id  Int
  mock_test_id Int
  answer_id    Int?
  answer       answer?  @relation(fields: [answer_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "question_mock_test_answer_id_fkey")
  mockTest     mockTest @relation(fields: [mock_test_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "question_mock_test_mock_test_id_fkey")
  question     question @relation(fields: [question_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "question_mock_test_question_id_fkey")

  @@id([question_id, mock_test_id], map: "question_mock_test_pkey")
}

enum difficulty {
  facil
  medio
  dificil
}

enum mocktesttype {
  personalizado
  automatico
  antigo
}
